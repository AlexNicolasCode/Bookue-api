{
  "name": "bookue-api",
  "version": "1.2.0",
  "description": "",
  "scripts": {
    "test": "jest --passWithNoTests --runInBand --no-cache --detectOpenHandles",
    "test:unit": "npm test -- --watch -c jest.unit.config.js",
    "test:integration": "npm test -- --watch -c jest.integration.config.js",
    "test:ci": "npm test -- -c jest.ci.config.js",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "start": "node dist/main/server.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register src/main/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prepare": "husky install"
  },
  "author": "AlexNicolasCode",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^3.3.0",
    "apollo-server-express": "^3.6.7",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.3",
    "graphql": "^15.5.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.6",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@faker-js/faker": "^7.4.0",
    "@shelf/jest-mongodb": "^3.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.45.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "jest-environment-node": "^27.5.0",
    "mockdate": "^3.0.5",
    "mongodb-memory-server": "^8.12.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
